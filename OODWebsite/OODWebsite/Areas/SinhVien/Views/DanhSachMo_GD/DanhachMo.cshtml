@model IEnumerable<OODWebsite.Models.DSLHP>
@{
    ViewBag.Title = "DanhachMo";
    Layout = "~/Areas/SinhVien/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>DANH SÁCH LỚP HỌC PHẦN</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href='@Url.Action("QuanLySV_GD", "QuanLySV_GD")'>Home</a></li>
                    <li class="breadcrumb-item active">Danh sách lớp học phần</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Mã học phần")
        </th>
        <th>
            @Html.DisplayName("Tên học phần")
        </th>
        <th>
            @Html.DisplayName("Tên lớp")
        </th>
        <th>
            @Html.DisplayName("Sỉ số")
        </th>
        <th>
            @Html.DisplayName("Số tín chỉ")
        </th>
        <th>
            @Html.DisplayName("LT-TH")
        </th>
        <th>
            @Html.DisplayName("Phòng")
        </th>
        <th>
            @Html.DisplayName("Thứ")
        </th>
        <th>
            @Html.DisplayName("Tiết bắt đầu")
        </th>
        <th>
            @Html.DisplayName("Tiết kết thúc")
        </th>
        <th>
            @Html.DisplayName("Địa điểm")
        </th>
        <th>
            @Html.DisplayName("Giáo Viên")
        </th>
        <th>
            @using (Html.BeginForm())
            {


                @Html.DropDownList("Nam", ViewBag.Nam as SelectList, "Chọn Năm", new { @class = "text-danger" })
                @Html.DropDownList("HocKy", Enumerable.Range(1, 3).Select(i => new SelectListItem { Text = i.ToString(), Value = i.ToString() }))
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Xem" class="btn btn-primary" />
                    </div>
                </div>
            }
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaHP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenHP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenLop)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SiSo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoTinChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LT_TH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Thu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TietBD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TietKT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaDiem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GV)
            </td>

        </tr>
    }

</table>

